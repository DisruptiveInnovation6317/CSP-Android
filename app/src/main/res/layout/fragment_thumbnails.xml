<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/match_scouting_thumbnail_rocket"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="@string/rocket_ship_thumbnail"
        android:src="@drawable/red_rocket" />

    <ImageView
        android:id="@+id/match_scouting_thumbnail_cargo_ship"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="@string/cargo_ship_thumbnail"
        android:src="@drawable/red_cargo_ship" />

</LinearLayout>